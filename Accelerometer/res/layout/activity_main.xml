<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    
    <TextView
        android:text="Maximum Acceleration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:textSize="20dp"
        >
        </TextView>
    <TextView
        android:text="X-axis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        >
        </TextView>
    <TextView
        android:id="@+id/max_acceleration_x_axis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        </TextView>
    
    <TextView
        android:text="Y-axis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        >
        </TextView>
        
    <TextView
        android:id="@+id/max_acceleration_y_axis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        </TextView>
        
    <TextView
        android:text="Z-axis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        >
        </TextView>
        
    <TextView
        android:id="@+id/max_acceleration_z_axis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        </TextView>
       
    <TextView
        android:text="Current Acceleration: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        >
        </TextView>    
    
    
 <!-- Current Acceleration Table -->   
    <TableLayout 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        >
        <TableRow
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"        	            
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="X-axis: "
                android:textSize="15dp"
        		android:layout_marginTop="10dp"
                />
            
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/current_x"
                android:text="0.0"
                />            
        </TableRow>
            <TableRow
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Y-axis: "
                android:textSize="15dp"
        		android:layout_marginTop="10dp"
                />
            
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/current_y"
                android:text="0.0"
                />            
        </TableRow>
        
        <TableRow
               
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Z-axis: "
                android:textSize="15dp"
        		android:layout_marginTop="10dp"
                />
            
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/current_z"
                android:text="0.0"
                />            
        </TableRow>
    </TableLayout>
   
</LinearLayout>